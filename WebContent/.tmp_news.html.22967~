<script type="text/javascript">
	$(function(){
		// 获取新闻分类
		$.ajax({
			url : "getNewsType",
			dataType : "json",
			success : function(data){
				data.forEach(function(item){
					$("<li><a href='news.html?typeID=" + item.ID + "'>" + item.typeName + "</a></li>").appendTo($(".menuList"));
				});
			}
		});
		
		// 是否显示新闻详细
		var newsID = getPara("newsID");
		if(newsID){
			$.ajax({
				url : "getNewsDetail",
				data : "newsID=" + newsID,
				dataType : "json",
				success : function(data){
					$("<div class='newsDetail'><div id='title'>" + data.title + "</div><div id='date'>" + data.date + "</div><div id='content'>" + data.content + "</div></div>").appendTo($(".rightContainer"));
				}
			});
			return;
		}
		
		// 根据url中分类ID获取相关新闻
		var typeID = getPara("typeID");
		$.ajax({
			url : "getNews",
			data : "typeID=" + typeID,
			dataType : "json",
			success : function(data){
				data.forEach(function(item){
					$("<div class='news'><span id='newsDate'>" + item.date + "</span><span id='newsTitle'><a href='news.html?newsID=" + item.ID + "'>" + item.title + "</a></span></div>").appendTo($(".rightContainer"));
				});
			}
		});
	});
</script>
