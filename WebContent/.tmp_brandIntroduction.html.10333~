<script type="text/javascript">
	var brandIntros;
	$(function(){
		// 获取品牌介绍
		$.ajax({
			url : "getBrandIntroduction",
			dataType : "json",
			success : function(data){
				brandIntros = data;
				data.forEach(function(item){
					$("<li><a href='brandIntroduction.html?id=" + item.ID + "'>" + item.title + "</a></li>").appendTo($(".menuList"));
				});

				// 是否显示某个指定品牌介绍
				var id = getPara("id");
				if(id){
					brandIntros.forEach(function(item){
						if(item.ID == id){
							$("<div class='brandIntro'>" + item.content + "</div>").appendTo($(".rightContainer"));
						}
					});
				}
				else{
					// 显示第一个
					$("<div class='brandIntro'>" + brandIntros[0].content + "</div>").appendTo($(".rightContainer"));
				}
			}
		});
	});
</script>
